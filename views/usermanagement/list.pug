extends ../layout

block content
    div(class="table-responsive")
        table(class="table table-hover table-sm")
            thead(class="thead-dark")
                tr
                    th(scope="col") Naam
                    th(scope="col") Functie 
                    if(userRights != "USER") 
                        th(scope="col") Email
                        th(scope="col") Uren
                        th(scope="col") Geboortedatum
                        if(userRights == "OWNER")
                            th(scope="col") Rechten
                        th(scope="col") Profiel
                        th(scope="col")  
            tbody
                each user in users
                    tr
                        th(scope="col") #{user.firstname} #{user.lastname}
                        th(scope="col") #{user.function}
                        if(userRights != "USER") 
                            th(scope="col") #{user.email}
                            th(scope="col") #{user.contract_hours}
                            th(scope="col") #{user.birth_date}
                            if(userRights == "OWNER")                                    
                                th(scope="col") #{user.role}
                            th(scope="col")
                                a(href="user/edit/"+user.id) Aanpassen
                            th(scope="col") 
                                a(href="user/delete/"+user.id) Verwijder 
        
    if(userRights != "USER") 
        div
            a(class="text-right"  href="/usermanagement/create") Aanmaken