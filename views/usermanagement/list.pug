extends ../layout

block content
    br
     
    div(class="card  shadow p-3 mb-5")
        div(class="card-header")
            h2 #{title} 
        div(class="card-body") 
            div(class="table-responsive")
                table(class="table table-hover table-sm")
                    thead(class="thead-dark")
                        tr
                            th(scope="col") Naam
                            th(scope="col") Functie 
                            if(userInfo.role != "USER") 
                                th(scope="col") Email
                                th(scope="col") Uren
                                th(scope="col") Geboortedatum
                                if(userInfo.role == "OWNER")
                                    th(scope="col") Rechten
                                th(scope="col") Profiel
                                th(scope="col")  
                    tbody
                        each user in users
                            if (!user.active && userInfo.role != "USER") || user.active
                                tr
                                    th(scope="col") #{user.firstname} #{user.middlename} #{user.lastname}
                                    th(scope="col") #{user.function}
                                    if(userInfo.role != "USER") 
                                        th(scope="col") #{user.email}
                                        th(scope="col") #{user.contract_hours}
                                        th(scope="col") #{user.birth_date}
                                        if(userInfo.role == "OWNER")                                    
                                            th(scope="col") #{user.role}
                                        th(scope="col")
                                            a(href="user/edit/"+user.id) Aanpassen
                                        th(scope="col") 
                                            a(href="user/delete/"+user.id) Verwijder 
        
        if(userInfo.role != "USER") 
            a(class="text-right"  href="/usermanagement/create") Aanmaken