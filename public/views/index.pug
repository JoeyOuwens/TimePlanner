extends layout

block content
    div(class="row")
        div(class="col-sm-12 col-md-6 offset-md-3")
            form(class="form-signin form" method="POST" action="/login/")
                #error
                    if error
                        p(class="alert alert-danger")
                            | Wachtwoord of gebruikersnaam onjuist, probeer opnieuw.
                div(class="round-border-white-box")
                    img(src="/images/horecaplanner.svg" height="128px" class="middle-image" id="logo")
                h2(class="mb-3 font-weight-normal text-center") Please sign in

                div(class="form-group")
                    label Email address
                    input(type="email" name="username" id="inputEmail" class="form-control" placeholder="Email address" required autofocus)
                div(class="form-group")
                    label Password
                    input(type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required)
                div(class="form-check form-check-inline")
                    input(class="form-check-input" type="checkbox" value="remember-me") 
                    label(class="form-check-label")
                        | Remember me
                div(class="form-group")
                    input(class=['btn', 'btn-primary', 'form-control'] type="submit" value="Sign in")
                a(href="#forgotten-password") I forgot my password.
       


   
