extends ../layout

block content
    br
     
    div(class="card  shadow p-3 mb-5")
        div(class="card-header")
            h2 #{title}
        div(class="card-body") 
            div(class="table-responsive")
                table(class="table table-hover table-sm")
                    thead(class="thead-dark")
                        tr
                            th(scope="col") Naam
                            th(scope="col") Functie
                            th(scope="col") Full-/Partime
                            if(userRights != "USER") 
                                th(scope="col") Email
                                th(scope="col") Uren
                                th(scope="col") Geboortedatum
                                if(userRights == "OWNER")
                                    th(scope="col") Rechten
                                th(scope="col") Profiel
                                th(scope="col")  
                    tbody
                        each user in users
                            tr
                                th(scope="col") #{user.name}
                                th(scope="col") #{user.function}
                                if(user.hours > 34)
                                    th(scope="col") Fulltime
                                else                                
                                    th(scope="col") Partime
                                if(userRights != "USER") 
                                    th(scope="col") #{user.email}
                                    th(scope="col") #{user.hours}
                                    th(scope="col") #{user.dob}
                                    if(userRights == "OWNER")                                    
                                        th(scope="col") #{user.rights}
                                    th(scope="col")
                                        a(href="user/edit/"+user.id) Aanpassen
                                    th(scope="col") 
                                        a(href="user/delete/"+user.id) Verwijder 
        
        if(userRights != "USER") 
            a(class="text-right"  href="/usermanagement/create") Aanmaken